{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true,
    "cypress/globals": true,
    "mocha": true
  },
  "extends": ["eslint:recommended", "plugin:cypress/recommended"],
  "plugins": ["cypress"],
  "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
  "overrides": [
    {
      "files": ["cypress/**/*.js"],
      "env": { "cypress/globals": true, "mocha": true }
    }
  ]
}
